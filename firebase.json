{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "README.md",
      "auth/firebase-config.sample.js"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/auth/login.html"
      },
      {
        "source": "/app",
        "destination": "/app/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      },
      {
        "source": "/auth/**",
        "headers": [
          { "key": "X-Robots-Tag", "value": "noindex, nofollow, noarchive, noimageindex" },
          { "key": "Cache-Control", "value": "no-store" }
        ]
      },
      {
        "source": "/app/**",
        "headers": [
          { "key": "X-Robots-Tag", "value": "noindex, nofollow, noarchive, noimageindex" }
        ]
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
