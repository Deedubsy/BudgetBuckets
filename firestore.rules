rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions for authentication
    function signedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }
    
    // TEMPORARY: Very permissive rules for debugging
    // This allows all authenticated users to read/write their own data
    match /users/{uid} {
      // Allow authenticated users to read/write their own user document
      allow read, write: if request.auth != null && request.auth.uid == uid;
      
      // Allow all subcollections and documents under the user
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }
    
    // Alternative path for budgets if they're stored separately
    match /budgets/{budgetId} {
      allow read, write: if request.auth != null;
    }
    
    // Temporary catch-all for debugging - REMOVE IN PRODUCTION
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Still block writes to unknown paths
    }
  }
}