rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions for authentication
    function signedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }
    
    // User profiles and data
    match /users/{uid} {
      // Users can read/write their own profile
      allow read, write: if isOwner(uid);
      
      // Budget documents under user
      match /budgets/{budgetId} {
        // Users can read/write their own budgets
        allow read, write: if isOwner(uid);
      }
      
      // Health check documents (temporary test documents)
      match /health-check/{testId} {
        allow read, write: if isOwner(uid);
      }
      
      // Allow any subcollection under user
      match /{document=**} {
        allow read, write: if isOwner(uid);
      }
    }
    
    // Deny all other access patterns
    match /{document=**} {
      allow read, write: if false;
    }
  }
}